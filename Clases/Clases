import math

#Se crea la clase Circulo con el parámetro radio y los métodos de obtención de área y perímetro
class Circulo:
    def __init__(self, radio):
        self.radio = radio

    def areaCirculo(self):
        return self.radio * self.radio * math.pi

    def perimetroCirculo(self):
        return self.radio * math.pi * 2

#Se pide al usuario que ingrese la medida del radio

radio = int(input('Proporciona el radio: '))

#Se coloca el error para advertir que el radio tiene que ser mayor a cero sino no deja continuar
if radio <= 0:
        raise ValueError("El radio debe ser mayor a 0.")

#Obtenemos los resultados con el objeto circulo1
circulo1 = Circulo(radio)
print("Área círculo: ", round(circulo1.areaCirculo(),2))
print("Perímetro círculo: ", round(circulo1.perimetroCirculo(),2))

#Se crea la múltiplicación del radio para que el usuario elija las veces a multiplicar
n = int(input('Proporciona las veces a multiplicar el radio: '))
radio2 = radio * n

#Se coloca el error para advertir que el radio tiene que ser mayor a cero sino no deja continuar
if radio2 <= 0:
        raise ValueError("El radio debe ser mayor a 0.")
print("El nuevo radio es: ", radio2)

#Mismo proceso para obtener resultados
class Circulo2:
    def __init__(self, radio2):
        self.radio2 = radio2

    def areaCirculo2(self):
        return self.radio2 * self.radio2 * math.pi

    def perimetroCirculo2(self):
        return self.radio2 * math.pi * 2

circulo2 = Circulo2(radio2)
print("Área círculo multiplicado: ", round(circulo2.areaCirculo2(),2))
print("Perímetro círculo multiplicado: ", round(circulo2.perimetroCirculo2(),2))
