import random

#Se crea la lista
List1 = []
id = 0

#Se define el generador de id y llenamos la lista
def contador():
    global suma_id
    suma_id=id+1

while id < 10:
    contador()
    id = suma_id
    Dict1 = {'id': id, 'edad' : random.randint(0, 100)}
    List1.append(Dict1)
print("Lista sin ordenar: ", List1)

#Se ordena la lista segÃºn edad
ListaOrdenada = sorted(List1, key=lambda d: d['edad'])
print("Lista ordenada: ",ListaOrdenada)

#Obtenemos las id de menor y mayor edad
print("El id de menor edad es: ", ListaOrdenada[0])
print("El id de mayor edad es: ", ListaOrdenada[9])
